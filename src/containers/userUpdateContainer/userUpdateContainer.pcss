	width: 100%;
	display: -webkit-flex;
	display: flex;
	align-items: center;
	-webkit-box-align: center;
	justify-content: center;
	padding: 10px 0px;
	background-color: #fff;
}

.wxpay_div2 img {
	width: 50px;
	margin-right: 10px;
}

.wxpay_div2 .wxcontent {
	font-size: 18px;
	color: #000000;
	flex: 1;
	-webkit-flex: 1;
	text-align: left;
}

.wxpay_div2 .less {
	font-size: 12px;
	width: 80px;
}

.wxpay_div2 .wxdesc {
	font-size: 12px;
	color: #666666;
}

